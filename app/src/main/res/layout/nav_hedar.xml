<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fog_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:id="@+id/layout_go_to_profile"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgCard"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/img_profile_post"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@color/fog_dark"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/username_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/imgCard"
            android:layout_gravity="center"
            android:fontFamily="@font/hellix_medium"
            android:text="Abdelhadi Alothman"
            android:textColor="@color/fog_dark"
            android:textSize="18sp" />





    </LinearLayout>

</LinearLayout>