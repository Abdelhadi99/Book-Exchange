<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="@color/fog_dark"
    android:padding="10dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:text="Forget Password"
        android:fontFamily="@font/hellix_regular"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textAlignment="center"
     />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"

        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Email"
        android:fontFamily="@font/hellix_regular"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/email_forget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/MyEditText"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:fontFamily="@font/hellix_regular"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:paddingStart="24dp"
        android:paddingEnd="20dp"
        android:textColor="@color/fog_dark"
        android:textColorHint="#8A8888"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/hellix_medium"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:textAllCaps="false"
        android:layout_margin="15dp"
        style="@style/nav_style"
        android:background="@drawable/gradient_button"
        android:text="Reset"
        android:textColor="@color/white"
        android:fontFamily="@font/hellix_medium"
        android:textSize="19sp"
       />



</LinearLayout>


</LinearLayout>