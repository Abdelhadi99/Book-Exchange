<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activites.ViewPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/light"
            android:elevation="20dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/hellix_medium"
                    android:text="User Info"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="30sp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/fog_dark"/>


                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/username_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6sp"
                    android:fontFamily="@font/hellix_light"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="17sp"

                    />

                <TextView
                    android:id="@+id/user_email_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/hellix_light"
                    android:textStyle="bold"
                    android:text="Email"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="17sp"

                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/light"
            android:elevation="20dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/hellix_medium"
                    android:text="Book Info"

                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="30sp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/fog_dark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/hellix_light"
                    android:text="Book Name"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="25sp"

                    />

                <TextView
                    android:id="@+id/book_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hellix_medium"
                    android:hint="Here.."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/orange_light"
                    android:textColorHint="@color/fog_4"
                    android:textSize="15sp"

                    />//..

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/hellix_light"
                    android:text="Book Edition"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="25sp"

                    />

                <TextView
                    android:id="@+id/book_edition_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hellix_medium"
                    android:hint="Here.."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/orange_light"
                    android:textColorHint="@color/fog_4"
                    android:textSize="15sp"

                    />//..

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/hellix_light"
                    android:text="Book Collage"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="25sp"

                    />

                <TextView
                    android:id="@+id/book_collage_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/hellix_medium"
                    android:hint="Here.."
                    android:textAllCaps="false"
                    android:textColor="@color/orange_light"
                    android:textColorHint="@color/fog_4"
                    android:textSize="15sp"

                    />//..


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/hellix_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="Book Price"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="25sp"

                    />
                <TextView
                    android:id="@+id/book_price_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hellix_medium"
                    android:hint="Here.."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/orange_light"
                    android:textColorHint="@color/fog_4"
                    android:textSize="15sp"

                    />//..


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/hellix_light"
                    android:text="Book States"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/fog_dark"
                    android:textSize="25sp"

                    />
                <TextView
                    android:id="@+id/book_states_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hellix_medium"
                    android:hint="Here.."
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/orange_light"
                    android:textColorHint="@color/fog_4"
                    android:textSize="15sp"

                    />//..

                <TextView
                    android:id="@+id/book_details_view"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/white"
                    android:textSize="20sp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890أبتثجحخدذرزسشصضطظعغفقكلمنهـويَؤأئء.,)(*%$ّآلآ\n "
                    android:gravity="top"
                    android:hint="Details.."
                    android:inputType="text"
                    android:maxLines="4"
                    android:padding="5dp"
                    android:paddingEnd="20dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>