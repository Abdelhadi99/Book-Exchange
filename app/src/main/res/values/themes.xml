<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookExchange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->


        <!-- Theme.MaterialComponents.DayNight.NoActionBar -->


        <!--   Color for the app bar and other primary UI elements. -->
        <item name="colorPrimary">@color/fog_4</item>

        <!--   A darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars. -->
        <item name="colorPrimaryVariant">@color/fog_dark</item>

        <!--   a secondary color for controls like checkboxes and text fields. -->

        <item name="colorOnPrimary">@color/fog_3</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/fog_4</item>
        <!-- Customize your theme here. -->

        <!--        <item name="android:windowLightStatusBar" >true</item>-->
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MyEditText">
        <item name="android:fontFamily">@font/hellix_regular</item>
        <item name="android:textColorHint">@color/fog_4</item>
        <item name="android:textColor">@color/fog_dark</item>
        <item name="android:textSize">19sp</item>
        <item name="android:ems">13</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">24dp</item>

    </style>

    <style name="nav_style">

        <item name="android:fontFamily">@font/hellix_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.BookExchange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookExchange.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookExchange.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>